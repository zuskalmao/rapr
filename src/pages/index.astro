<style>
	main {
		width: 100%;
		color: var(--paper-white);
		font-size: 20px;
		line-height: 1.6;
	}
	
	header {
		padding: 2rem 0;
		text-align: center;
	}
	
	.logo-container {
		display: inline-block;
	}
	
	.logo {
		font-size: 4rem;
		font-weight: 900;
		letter-spacing: -2px;
		color: var(--blood-red);
		margin-bottom: 0.5rem;
	}
	
	.blink {
		animation: blink-animation 1s steps(2, start) infinite;
	}
	
	@keyframes blink-animation {
		to {
			visibility: hidden;
		}
	}
	
	.tagline {
		font-size: 1.2rem;
		font-style: italic;
	}
	
	.hero {
		padding: 2rem 0 4rem;
	}
	
	.hero-content {
		text-align: center;
	}
	
	.hero-title {
		font-size: 2.5rem;
		margin-bottom: 2rem;
	}
	
	.hero-image {
		position: relative;
		margin: 0 auto 2.5rem;
		max-width: 800px;
		border: 3px solid var(--blood-red);
		border-radius: 4px;
		overflow: hidden;
		box-shadow: 0 10px 30px rgba(255, 0, 0, 0.3);
	}
	
	.hero-image img {
		width: 100%;
		height: auto;
		display: block;
	}
	
	.image-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: rgba(255, 0, 0, 0.2);
	}
	
	.flashing-text {
		font-size: 5rem;
		font-weight: 900;
		color: var(--blood-red);
		transform: rotate(-15deg);
		text-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
		animation: flash 2s infinite;
		opacity: 0.9;
	}
	
	@keyframes flash {
		0%, 49% {
			opacity: 0.9;
		}
		50%, 100% {
			opacity: 0;
		}
	}
	
	.hero-description {
		font-size: 1.5rem;
		max-width: 800px;
		margin: 0 auto;
	}
	
	.features {
		padding: 4rem 0;
		background-color: var(--medium-gray);
	}
	
	.feature-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}
	
	.feature-card {
		background-color: var(--dark-bg);
		border-radius: 8px;
		padding: 2rem;
		text-align: center;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
		transition: transform 0.3s ease;
	}
	
	.feature-card:hover {
		transform: translateY(-5px);
	}
	
	.feature-card h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--blood-red);
	}
	
	.cta {
		padding: 5rem 0;
		text-align: center;
	}
	
	.cta-content {
		max-width: 700px;
		margin: 0 auto;
	}
	
	.cta h2 {
		font-size: 2.5rem;
		margin-bottom: 1.5rem;
	}
	
	.cta p {
		font-size: 1.3rem;
		margin-bottom: 2rem;
	}
	
	.buy-button {
		background: linear-gradient(to right, var(--blood-red), var(--dark-red));
		color: white;
		font-size: 1.2rem;
		font-weight: bold;
		padding: 1rem 2rem;
		border: none;
		border-radius: 50px;
		cursor: pointer;
		transition: all 0.3s ease;
		margin-bottom: 1rem;
	}
	
	.buy-button:hover {
		filter: brightness(1.2);
		transform: translateY(-3px);
		box-shadow: 0 10px 20px rgba(255, 0, 0, 0.3);
	}
	
	.small-text {
		font-size: 0.7rem;
		opacity: 0.7;
	}
	
	.disclaimer {
		font-size: 0.9rem;
		opacity: 0.7;
		margin-top: 1rem;
		font-style: italic;
	}
	
	footer {
		background-color: var(--dark-bg);
		text-align: center;
		padding: 2rem 0;
		font-size: 0.9rem;
		opacity: 0.7;
		border-top: 1px solid var(--medium-gray);
	}
	
	@media screen and (max-width: 768px) {
		.logo {
			font-size: 3rem;
		}
		
		.hero-title,
		.cta h2 {
			font-size: 2rem;
		}
		
		.hero-description,
		.cta p {
			font-size: 1.2rem;
		}
		
		.flashing-text {
			font-size: 3rem;
		}
	}
</style>
